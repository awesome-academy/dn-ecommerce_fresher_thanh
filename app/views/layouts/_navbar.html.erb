<!-- Navbar Start -->
<div class="container-fluid">
  <div class="row border-top">
    <div class="col-lg-3">
      <a class="btn align-items-center bg-primary w-100 nav-category" href="#navbar-vertical" data-toggle="collapse">
        <h4><%= t "menu.categories" %></h4>
        <i class="fa fa-angle-down"></i>
      </a>
      <nav class="collapse navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
        <div class="navbar-nav w-100 overflow-hidden">
          <%= render partial: "layouts/category", collection: @categories, as: :category %>
        </div>
      </nav>
    </div>
    <div class="col-lg-9">
      <nav class="navbar py-3">
        <div class="wrap-menu">
          <div class="navbar-main mr-auto navbar-nav">
            <%= link_to t("menu.home"), root_path, class: "nav-item nav-link" %>
            <%= link_to t("menu.shop"), "#", class: "nav-item nav-link" %>
            <%= link_to t("menu.contact"), "#", class: "nav-item nav-link" %>
          </div>
          <% if user_signed_in? %>
            <div class="nav-item dropdown">
              <%= link_to "#", class: "nav-link dropdown-toggle", "data-toggle": "dropdown" do %>
                <%= current_user.name %>
                <i class="fa fa-angle-down"></i>
              <% end %>
              <div class="dropdown-menu">
                <%= link_to raw(t "menu.user.settings"), "#", class: "dropdown-item" %>
                <%= link_to raw(t "menu.user.orders"), orders_path, class: "dropdown-item" %>
                <%= link_to raw(t "menu.user.logout"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </div>
          <% else %>
            <div class="navbar-main navbar-nav py-0">
              <%= link_to t("menu.login"), new_user_session_path, class: "nav-item nav-link" %>
              <%= link_to t("menu.register"), new_user_registration_path, class: "nav-item nav-link" %>
            </div>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</div>
<!-- Navbar End -->
